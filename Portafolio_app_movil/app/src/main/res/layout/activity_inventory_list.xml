<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".staff.InventoryList">

    <Button
        android:id="@+id/markStatus"
        android:layout_width="225dp"
        android:layout_height="47dp"
        android:layout_marginTop="140dp"
        android:layout_weight="1"
        android:clickable="false"
        android:onClick="setProductStatus"
        android:text="Marcar estado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        tools:ignore="TouchTargetSizeCheck" />

    <CheckBox
        android:id="@+id/ok"
        android:layout_width="83dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:onClick="okStatus"
        android:text="Ok"
        app:layout_constraintBottom_toTopOf="@+id/markStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        app:layout_constraintVertical_bias="0.259"
        tools:ignore="TouchTargetSizeCheck" />

    <CheckBox
        android:id="@+id/wrong"
        android:layout_width="139dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:onClick="wrongStatus"
        android:text="En mal estado"
        app:layout_constraintBottom_toTopOf="@+id/markStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toEndOf="@+id/ok"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        app:layout_constraintVertical_bias="0.272"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="192dp"
        android:layout_height="26dp"
        android:layout_marginTop="28dp"
        android:text="Estado del Prodcuto"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/productId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/markStatus"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>