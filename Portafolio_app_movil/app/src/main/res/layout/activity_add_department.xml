<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".addDepartment">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/communeSpinner"
                    android:layout_width="316dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/shape_input"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.363"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/price"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/comunatexto2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de departamento *"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/departmentTypeSpinner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.075"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="99dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Disponibilidad *"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toStartOf="@+id/switchAvaible"
                    app:layout_constraintHorizontal_bias="0.01"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/departmentDirection" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad de piezas *"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/qtyRoom"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.068"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio *"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.051"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/departmentDirection"
                    android:layout_width="316dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/shape_input"
                    android:ems="10"
                    android:hint="Dirección"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.386"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/extraServiceGoBack3"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/qtyRoom"
                    android:layout_width="316dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/shape_input"
                    android:ems="10"
                    android:hint="Cantidad de piezas"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.386"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    tools:ignore="TouchTargetSizeCheck" />

                <Spinner
                    android:id="@+id/departmentTypeSpinner"
                    android:layout_width="316dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/shape_input"
                    android:contentDescription="@string/app_name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.363"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/communeSpinner"
                    tools:ignore="TouchTargetSizeCheck" />

                <Switch
                    android:id="@+id/switchAvaible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="28dp"
                    android:onClick="switchButton"
                    android:text="No disponible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/departmentDirection"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/comunatexto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comuna *"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/communeSpinner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.053"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/comunatexto5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción corta *"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/shortDescription"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.066"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/comunatexto6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción larga *"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/longDescription"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.066"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/comunatexto3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Foto del departamento*"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/departmentImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.464"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="39dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                    app:layout_constraintBottom_toBottomOf="@+id/communeSpinner"
                    app:layout_constraintEnd_toEndOf="@+id/communeSpinner"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/communeSpinner"
                    app:layout_constraintTop_toTopOf="@+id/communeSpinner"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="39dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                    app:layout_constraintBottom_toBottomOf="@+id/departmentTypeSpinner"
                    app:layout_constraintEnd_toEndOf="@+id/departmentTypeSpinner"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/departmentTypeSpinner"
                    app:layout_constraintTop_toTopOf="@+id/departmentTypeSpinner"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/extraServiceGoBack3"
                    android:layout_width="212dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
                    android:onClick="goBack"
                    android:text="Agregar Departamento"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.114"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección *"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toTopOf="@+id/departmentDirection"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.058"
                    app:layout_constraintStart_toStartOf="parent" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="316dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/shape_input"
                    android:ems="10"
                    android:hint="Precio"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.363"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/qtyRoom"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/shortDescription"
                    android:layout_width="316dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/shape_input"
                    android:ems="10"
                    android:hint="Descripción corta"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.363"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/departmentTypeSpinner"
                    tools:ignore="TouchTargetSizeCheck" />

                <EditText
                    android:id="@+id/longDescription"
                    android:layout_width="316dp"
                    android:layout_height="101dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/shape_input"
                    android:ems="10"
                    android:hint="Descripción larga"
                    android:inputType="textMultiLine"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.363"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shortDescription"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/btnReportes3"
                    android:layout_width="296dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:layout_weight="1"
                    android:onClick="addDepartment"
                    android:text="@string/add"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/departmentImage" />

                <ImageView
                    android:id="@+id/departmentImage"
                    android:layout_width="231dp"
                    android:layout_height="119dp"
                    android:layout_marginTop="40dp"
                    android:onClick="loadImage"
                    android:src="@drawable/camara"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/longDescription"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/base64Image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toTopOf="@+id/btnReportes3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/departmentImage" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>